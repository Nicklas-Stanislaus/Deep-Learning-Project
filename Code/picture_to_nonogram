import numpy as np
from PIL import Image
import matplotlib.pyplot as plt

#read the image from path
image = Image.open('C:/Users/nickl/Desktop/Deep learning projekt/Deep-Learning-Project/Data/pikachu.jpg')

#Convert the image to right format
bw_pixilated_image = image.convert('L').point(lambda x: 0 if x > 128 else 255, '1').resize((50,50))

#plt.imshow(grey)
#plt.show()

# nonogram to numpy matrix
nonogram_matrix = np.array(bw_pixilated_image).astype(int)
print(nonogram_matrix)

